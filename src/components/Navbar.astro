---
import "../styles/global.css";
import ExtIcon from "./icons/ExtIcon.astro";
import SimplyEr1cLogo from "./icons/SimplyEr1cLogo.astro";
---

<nav
  class="z-10 w-full flex items-center justify-between px-2 md:px-23 py-5 bg-transparent text-snowwhite"
>
  <!-- Left: Brand and mobile menu button -->
  <div class="flex items-center gap-2">
    <!-- Mobile menu button (static, no JS) -->
    <button
      class="lg:hidden p-2 rounded hover:bg-coolblue/80 focus:outline-none focus:ring-2 focus:ring-snowwhite"
      aria-label="Open menu"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
    <a href="/" class="text-snowhite" aria-label="Inicio">
      <SimplyEr1cLogo />
    </a>
  </div>

  <!-- Right: Menu (hidden on mobile) -->
  <ul class="hidden lg:flex items-center gap-6 text-lg font-medium">
    <li>
      <a
        href="/about"
        class="focus:outline-none focus:ring-2 focus:ring-coolblue dark:focus:ring-neoncyan rounded"
      >
        About Me
      </a>
    </li>
    <li>
      <a
        href="/contact"
        class="focus:outline-none focus:ring-2 focus:ring-coolblue dark:focus:ring-neoncyan rounded"
        >Contact</a
      >
    </li>
    <li>
      <a
        href="https://cara.app/simplyer1c/portfolio"
        target="_blank"
        rel="noopener"
        class="inline-flex gap-x-2 bg-snowwhite text-coolblue dark:bg-neoncyan dark:text-justdark font-bold p-2 rounded-xl focus:outline-none focus:ring-2 focus:ring-coolblue dark:focus:ring-neoncyan"
        >Artwork <ExtIcon /></a
      >
    </li>
  </ul>
</nav>
