---
// Import necessary components/layouts if needed
import "../styles/global.css";

const images = [
  { id: 1, src: "https://picsum.photos/200/300" },
  { id: 2, src: "https://picsum.photos/400/300" },
  { id: 3, src: "https://picsum.photos/350/500" },
  { id: 4, src: "https://picsum.photos/500/350" },
  { id: 5, src: "https://picsum.photos/450/350" },
  { id: 6, src: "https://picsum.photos/350/450" }
];
---

<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content="John Doe's portfolio page" />
        <title>My Work</title>
        <link rel="icon" type="image/svg+xml" href="/public/favicon.svg" />
        <style>
            .gallery-container {
                max-width: 1200px;
                margin: 0 auto;
                padding: 2rem;
            }
            
            .masonry-grid {
                columns: 4 300px;
                gap: 1.5rem;
                padding: 1rem;
            }
            
            .gallery-item {
                break-inside: avoid;
                background: #f0f0f0;
                padding: 1rem;
                border-radius: 8px;
                cursor: pointer;
                transition: transform 0.3s ease;
            }
            
            .gallery-item:hover {
                transform: scale(1.02);
            }
            
            .expanded-view {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.8);
                display: none;
                justify-content: center;
                align-items: center;
                z-index: 1000;
            }
            
            .expanded-image {
                max-width: 90%;
                max-height: 90vh;
                object-fit: contain;
            }
            
            @media (max-width: 1024px) {
                .masonry-grid {
                    columns: 3 250px;
                }
            }
            
            @media (max-width: 768px) {
                .masonry-grid {
                    columns: 2 200px;
                }
            }
            
            @media (max-width: 480px) {
                .masonry-grid {
                    columns: 1 200px;
                }
            }
        </style>
    </head>

    <body>
        
        <div class="gallery-container">
            <div class="masonry-grid">
                {images.map((image) => (
                    <div class="gallery-item" onclick="showExpandedView('{image.src}')">
                        <img src="{image.src}" alt="Portfolio item" style="width: 100%; height: auto;" />
                    </div>
                ))}
            </div>
        </div>

        <div id="expandedView" class="expanded-view">
            <img id="expandedImage" class="expanded-image" src="" alt="Expanded view" />
            <button onclick="closeExpandedView()" style="position: absolute; top: 20px; right: 20px; color: white; background: none; border: none; font-size: 24px; cursor: pointer;">Ã—</button>
        </div>

        
    </body>
</html>
