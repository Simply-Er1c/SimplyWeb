---
// Import necessary components/layouts if needed
import { Image } from "astro:assets";
import "../styles/global.css";
import BrushIcon from "../components/icons/BrushIcon.astro";
import UserIcon from "../components/icons/UserIcon.astro";
import MessageIcon from "../components/icons/MessageIcon.astro";
import XIcon from "../components/icons/XIcon.astro";
import BlueskyIcon from "../components/icons/BlueskyIcon.astro";
import TwitchIcon from "../components/icons/TwitchIcon.astro";
import KickIcon from "../components/icons/KickIcon.astro";
import MastodonIcon from "../components/icons/MastodonIcon.astro";
import InstagramIcon from "../components/icons/InstagramIcon.astro";
import TumblrIcon from "../components/icons/TumblrIcon.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Digital Illustrator" />
    <title>SimplyEr1c</title>
    <link rel="icon" type="image/svg+xml" href="/public/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <main>
      <!-- Hero Section -->
      <section class="relative hero">
        <!-- Background image layer -->
        <Image
          src="/SadMachine11.png"
          width={1920}
          height={1080}
          loading="eager"
          alt="Background"
          class="absolute inset-0 w-full h-full object-cover opacity-40 pointer-events-none select-none dark:opacity-0"
          draggable="false"
        />

        <!-- Dialog -->
        <div class="relative z-10">
          <div class="dialog mx-8 md:mx-0">
            <h2 class="text-2xl md:text-6xl text-center">Â¡Hola! Soy</h2>
            <h1
              class="text-[38px] md:text-[6rem] font-bold leading-none text-center"
            >
              SIMPLYER1C
            </h1>
            <h4 class="text-lg md:text-2xl font-semibold text-center">
              Ilustrador Digital
            </h4>

            <!-- Main link buttons  -->
            <div class="flex flex-wrap gap-3 my-3 justify-center mx-auto">
              <a
                href="https://cara.app/simplyer1c/portfolio"
                class="linkbtn"
                target="_blank"
                rel="noopener"
              >
                <BrushIcon />
                <p>Artwork</p>
              </a>
              <a href="/about" class="linkbtn">
                <UserIcon />
                <p>About Me</p>
              </a>
              <a href="/contact" class="linkbtn">
                <MessageIcon />
                <p>Contact</p>
              </a>
            </div>

            <!-- social buttons -->
            <div
              class="flex flex-row flex-wrap items-center justify-center gap-x-4 gap-y-2 mx-auto"
            >
              <a
                href="https://x.com/SimplyEr1c"
                aria-label="X (formerly Twitter)"
                class="socialbtn"
                target="_blank"
                rel="noopener noreferrer"
              >
                <XIcon />
              </a>
              <a
                href="https://bsky.app/profile/simplyer1c.bsky.social"
                class="socialbtn"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Bluesky"
              >
                <BlueskyIcon />
              </a>
              <a
                href="https://www.twitch.tv/simplyer1c"
                class="socialbtn"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Twitch"
              >
                <TwitchIcon />
              </a>
              <a
                href="https://kick.com/simplyer1c"
                aria-label="Kick"
                class="socialbtn"
                target="_blank"
                rel="noopener noreferrer"
              >
                <KickIcon />
              </a>
              <a
                href="https://mastodon.social/@SimplyEr1c"
                class="socialbtn"
                target="_blank"
                rel="me noopener noreferrer"
                aria-label="Mastodon"
              >
                <MastodonIcon />
              </a>
              <a
                href="https://instagram.com/simplyer1c"
                class="socialbtn"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Instagram"
              >
                <InstagramIcon />
              </a>
              <a
                href="https://simplyer1c.tumblr.com"
                class="socialbtn"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Tumblr"
              >
                <TumblrIcon />
              </a>
            </div>
          </div>
        </div>
      </section>
    </main>
  </body>
</html>
